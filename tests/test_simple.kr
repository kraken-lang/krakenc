module test_simple;

fn add(a: int, b: int) -> int {
    return a + b;
}

fn greet(name: string) -> void {
    puts(str_concat("Hello, ", str_concat(name, "!")));
}

fn main() -> int {
    let x = 10;
    let y = 32;
    let result = add(x, y);
    puts(str_concat("result: ", fmt_int(result)));
    greet("Kraken");

    if (result == 42) {
        puts("correct!");
    } else {
        puts("wrong!");
    }

    return 0;
}
